<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_h2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onBackClose"
        android:padding="30dp"
        android:src="@mipmap/iv_detail_back" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/iv_detail_bg" />
    <TextView
        android:id="@+id/id_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="15dp"
        android:text="名称："
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeA2" />

    <TextView
        android:id="@+id/id_tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:text="年龄："
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeA2" />

    <ImageView
        android:id="@+id/id_iv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:src="@mipmap/iv_like_click" />

    <TextView
        android:id="@+id/id_tv_currCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeA1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_toRightOf="@id/id_tv_currCount"
        android:padding="5dp"
        android:text="/10"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeA3"
        android:textStyle="bold" />


</RelativeLayout>
